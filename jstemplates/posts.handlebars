{{#each posts}}
<article class="post {{#if local}} local{{else}}{{#if sms}} sms{{else}} no-sms{{/if}}{{#unless unread}} old{{/unless}}{{/if}}{{#if unread}} unread{{/if}}" data-author-id="{{author_id}}" data-post-id="{{post_id}}" data-author-sequence="{{author_sequence_id}}" data-xhr-count="{{xhr_count}}" data-mark-read-url="{{mark_read_url}}">

  <header class="post-meta">
    {{#unless local}}
    <div class="sms-info details" title="{{#if from_sms}}Received by text.{{else}}{{#if to_sms}}Text{{plural_sms}}{{else}}No texts{{/if}} sent.{{/if}}">

      <div class="details-body" id="sms-post-{{post_id}}-details">
        {{#if from_sms}}Received by text. {{/if}}

        {{#if to_sms}}Text{{plural_sms}} sent{{#if sms_recipients}} to {{sms_recipients}}{{/if}}.{{/if}}

        {{#unless from_sms}}{{#unless to_sms}}No text messages sent.{{/unless}}{{/unless}}
      </div>

      <a href="#sms-post-{{post_id}}-details" class="summary">{{#unless sms}}no {{/unless}}text messages sent/received</a>

    </div>
    {{/unless}}
    <h3 class="byline vcard">
      <b class="title">{{role}}:</b>
      <span class="fn">{{author}}</span>
    </h3>
    <time class="pubdate" datetime="{{timestamp}}">{{date}} at {{time}}</time>
  </header>

  <p class="post-text">
    {{#if local}}{{text}}{{else}}{{{text}}}{{/if}}
  </p>

</article>
{{/each}}
